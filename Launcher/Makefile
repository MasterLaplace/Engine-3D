NAME	= ../launcher

PYTHON	= python3

PIP		= pip3

all: install

install:
	@$(ECHO) $(BOLD) $(GREEN)"\nâ–º INSTALL Launcher ðŸ“¦ !\n"$(DEFAULT)
	@$(PYTHON) -m pip install --upgrade pip -q
	@$(PIP) freeze | grep -v moddb > ./requirements.txt 2> /dev/null
	@$(PIP) install -r ./requirements.txt -q
	@$(ECHO) $(BOLD) $(GREEN)âœ“$(LIGHT_BLUE)" INSTALL Launcher ðŸ“¦"$(DEFAULT)

lint:
	@$(PYTHON) -m pylint src/*.py

type:
	@$(PYTHON) -m mypy src/*.py

clean:
	@$(RM) __pycache__ .pytest_cache .mypy_cache
	@-$(ECHO) $(BOLD) $(GREEN)âœ“$(LIGHT_BLUE)" CLEAN Launcher ðŸ’¨"$(DEFAULT)

fclean: clean
	@$(RM) $(NAME)
	@-$(ECHO) $(BOLD) $(GREEN)âœ“$(LIGHT_BLUE)" FCLEAN Launcher ðŸ§»"$(DEFAULT)

re: clean all

## HELP MODE

